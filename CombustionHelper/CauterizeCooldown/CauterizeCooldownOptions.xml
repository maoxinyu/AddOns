					</OnShow>
					<OnClick>
						CombuCautChatSay()
					</OnClick>				
				</Scripts>
			</CheckButton>

            <CheckButton name="CombuCautAnnounceYellButton" inherits="ChatConfigCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="CombuCautAnnounceSayButton" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="-30"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
